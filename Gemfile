  gem 'rspec-rails'
  gem 'ruby-debug'
  gem 'spork', "0.9.0.rc3"
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'timecop'
  gem 'yard'
  # Generating haml-Files for devise
  gem 'hpricot'
  gem 'ruby_parser'
end
